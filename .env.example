# Hyperliquid API Configuration
NEXT_PUBLIC_HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
NEXT_PUBLIC_HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
NEXT_PUBLIC_CHAIN_ID=1337

# Private Keys (Never commit actual keys!)
HYPERLIQUID_PRIVATE_KEY=your_private_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/socialpulse

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Social Trading Settings
MAX_COPY_TRADERS=10
DEFAULT_COPY_ALLOCATION=10
MIN_COPY_AMOUNT=100
MAX_COPY_AMOUNT=100000

# Fee Structure (in basis points)
MANAGEMENT_FEE=200  # 2%
PERFORMANCE_FEE=2000 # 20%

# API Rate Limits
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X
NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_COPY_TRADING=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MOBILE_APP=false

# Development
NODE_ENV=development
LOG_LEVEL=debug